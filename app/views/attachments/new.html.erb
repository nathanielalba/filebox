<%= form_for(@file) do |f| %>
	<% if @file.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@file.errors.count, "error") %> prohibited this file from being uploaded.</h2>
			<ul>
				<% @file.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="well">

		<div class="form-group">
			<%= f.label :name %><br>
			<%= f.text_field :name %>
		</div>

		<div class="form-group">
			<%= f.label :attachment %><br>
			<%= f.attachment_field :attachment %>
		</div>

		<div class="form-group">
			<%= f.submit "Upload!", class: "btn btn-primary" %>
		</div>

	</div>
<% end %>